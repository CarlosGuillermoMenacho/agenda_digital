<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pbContacts"
        style="?android:attr/progressBarStyle"
        android:layout_width="123dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toBottomOf="@+id/rvContactList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvContactList"
        tools:visibility="gone" />

    <EditText
        android:id="@+id/etContactSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:hint="Buscar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContactList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/etContactSearch"
        android:divider="@android:color/darker_gray"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll" />

</RelativeLayout>