<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.modules.groupContacts.GroupContactsFragment">

    <ProgressBar
        android:id="@+id/pbGroupContacts"
        style="?android:attr/progressBarStyle"
        android:layout_width="123dp"
        android:layout_height="104dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/etGroupContactSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:hint="Buscar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroupContactList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:layout_below="@id/etGroupContactSearch"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll" />

</RelativeLayout>