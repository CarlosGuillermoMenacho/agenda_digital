<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="72dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:cardBackgroundColor="@color/default_bubble_color_rcv"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/sender_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginBottom="4dp"
                android:textColor="@color/default_message_color_rcv"
                android:textSize="@dimen/default_message_text_size"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="Timi"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivImageMessage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_gravity="end"
                android:visibility="visible"
                android:contentDescription="@string/image"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:id="@+id/flMessageVideoContainer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"
                android:layout_gravity="end"
                android:background="@android:color/transparent">
                <VideoView
                    android:id="@+id/vvVideoMessage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="visible"
                    android:layout_gravity="end"
                    android:contentDescription="@string/video_message"/>

                <ImageButton
                    android:id="@+id/ibMessagePlayVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:visibility="visible"
                    android:src="@drawable/play_64icon"/>
            </FrameLayout>

            <TextView
                android:id="@+id/message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center_vertical|start"
                android:textColor="@color/default_message_color_rcv"
                android:textSize="@dimen/default_message_text_size"
                tools:text="My name is Timi and I am..." />

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/timestamp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center_vertical|end"
                android:textColor="@color/default_tstamp_color_rcv"
                android:textSize="@dimen/default_timestamp_text_size"
                tools:text="12:10 am" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>