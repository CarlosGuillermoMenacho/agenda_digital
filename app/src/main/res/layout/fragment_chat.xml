<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_frame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:clipToPadding="true"
        android:divider="@android:color/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:transcriptMode="alwaysScroll" />

    <com.devlomi.record_view.RecordView
        android:id="@+id/recordView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:visibility="gone"
        app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
        app:slide_to_cancel_arrow_color="@color/black"
        app:slide_to_cancel_text="Slide to cancel" />

    <com.agendadigital.views.modules.chats.components.fab.SendFloatingActionButton
        android:id="@+id/sendButton"
        tools:src="@drawable/ic_send_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
    </com.agendadigital.views.modules.chats.components.fab.SendFloatingActionButton>

    <com.devlomi.record_view.RecordButton
        android:id="@+id/recordButton"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_gravity="center|bottom"
        android:layout_marginEnd="5dp"
        android:layout_weight=".2"
        android:background="@drawable/mic_background"
        android:scaleType="center"
        android:tint="@color/colorAccent"
        android:visibility="gone"
        app:mic_icon="@drawable/ic_mic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/input_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toLeftOf="@id/sendButton"
        android:layout_toStartOf="@id/sendButton"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="48dp"
        app:cardElevation="1dp"
        app:contentPadding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etTextMessageToSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="@string/default_input_hint"
                android:inputType="text"
                android:maxLines="5"
                android:minHeight="48dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textColorHint="@color/main_color_gray"
                android:textSize="@dimen/default_input_text_size" />
            <ImageButton
                android:id="@+id/btAttach"
                android:layout_width="44dp"
                android:layout_height="match_parent"

                android:background="@android:color/transparent"
                android:src="@drawable/attach"
                android:layout_weight="0"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>